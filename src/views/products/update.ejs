<%-include("../partials/head",{
    title:`Producto: ${product[0].nombre}`,
    css:""
})%>
<body>
    <header>
        <%-include('../partials/navbar')%>
    </header>
    <main>
        <div class="container col-4">
            <div class="row">
                <form>
                <div class="mb-3 col-12">
                    <label for="">nombre</label>
                    <input type="text" id="nombre" class="form-control" value="<%=product[0].nombre%>">
                </div>
                <div class="mb-3 col-12">
                    <label for="">proveedor</label>
                    <select id="proveedor" class="form-select">
                        <%if(proveedor[0].id_proveedor){%>
                            <option value="<%=proveedor[0].id_proveedor%>"><%=proveedor[0].nombre%></option>
                            <% proveedores.forEach(item=> { %>
                                <option value="<%=item.id_proveedor%>"><%=item.nombre%></option>
                            <% }) %>
                        <%}%>
                    </select>
                </div>
                <div class="mb-3 col-12">
                    <label for="">precio</label>
                    <input type="number" id="precio" class="form-control" value="<%=product[0].precio%>">
                </div>
                <div class="mb-3 col-12">
                    <label for="">cantidad</label>
                    <input type="text" id="cantidad" class="form-control" value="<%=product[0].cantidad%>">
                </div>
                <div class="mb-3 col-12">
                    <label for="">categoria</label>
                    <select id="categoria" class="form-select">
                        <%if(categoria[0].id_categoria){%>
                            <option value="<%=categoria[0].id_categoria%>"><%=categoria[0].nombre%></option>
                            <% categorias.forEach(item=> { %>
                                <option value="<%=item.id_categoria%>"><%=item.nombre%></option>
                            <% }) %>
                        <%}%>
                    </select>
                </div>
                <div class="mb-3 col-12">
                    <button data-id="<%=product[0].id_producto%>" id="update" class="btn btn-success form-control">actualizar</button>
                </div>
            </form>
            </div>
        </div>
    </main>
<%-include('../partials/footer',{
    js:["products"]
})%>