<%-include("../partials/head",{
    title:"Productos",
    css:[]
})%>
<body>
    <header>
        <%- include("../partials/navbar") %>
    </header>
    <%if(products.length){%>
        <div class="container ">
            <% products.forEach(item=>{ %>
                <div class="card m-2 d-inline-block hover-shadow " style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title "><a href="/productos/producto/<%=item.id_producto%>" class="text-decoration-none text-success"><%=item.nombre%></a></h5>
                        <p class="card-text">Precio: $<%= item.precio %></p>
                        <p class="card-text">Cantidad: <%= item.cantidad %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    <%} else {%>
        <%if(user[0].tipo_usuario == 'user'){%>
            <div class="container col-md-4 bg-primary mt-3 p-2 rounded">
                <div class="text-center text-white">
                    <h3 >No hay productos registrados</h3>
                </div>
            </div>
        <%}else {%>
            <div class="container col-md-4 bg-primary mt-3 p-2 rounded">
                <div class="text-center text-white">
                    <h3 >No hay productos registrados</h3>
                    <p>agrega uno <a href="/productos/create" class="btn btn-success">agregar</a></p>
                </div>
            </div>
        <%}%>
    <%}%>
    <%-include("../partials/footer",{
        js:[]
    })%>
